@model Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Dojo Survey with Validation</title>
</head>
<body>
    <div class="container">
        <h1>Dojo Survey</h1>
        <form action="/process" method="post">
            <table>
                <tr>
                    <td>Your Name:</td>
                    <td><input asp-for="Name"></td>
                    <td><span asp-validation-for="Name"></span></td>
                </tr>
                <tr>
                    <td>Dojo Location:</td>
                    <td>
                        <select name="Location">
                            <option value="Seattle">Seattle</option>
                            <option value="Miami">Miami</option>
                            <option value="Honolulu">Honolulu</option>
                        </select>
                    </td>
                    <td><span asp-validation-for="Location"></span></td>
                </tr>
                <tr>
                    <td>Favorite Language:</td>
                    <td>
                        <select name="Language">
                            <option value="C#">C#</option>
                            <option value="Python">Python</option>
                            <option value="JavaScript">JavaScript</option>
                        </select>
                    </td>
                    <td><span asp-validation-for="Language"></span></td>
                </tr>
                <tr>
                    <td>Comment (optional):</td>
                </tr>
            </table>
            <p><textarea name="Comment" cols="50" rows="5"></textarea></p>
            <p><span asp-validation-for="Comment"></span></p>
            <br>
            <button type="submit">Submit</button>        
        </form>
    </div>
</body>
</html>