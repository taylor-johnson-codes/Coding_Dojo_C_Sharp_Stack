@model Category

<div class="container">
    <h1 class="text-center mb-5"><a asp-controller="Home" asp-action="Products">Products</a> | Categories</h1>

    <div class="row">
        <div class="col border-right border-dark">
            <h2 class="text-center mb-3">New Category</h2>

            <form asp-controller="Home" asp-action="CreateCategory" method="POST">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <input asp-for="Name">
                </div>

                <div class="form-group">
                    <button class="btn btn-success">Create</button>
                </div>
            </form>
        </div>

        <div class="col">
            <h2 class="text-center">Existing Categories</h2>

            @if (ViewBag.Categories2 != null)
            {
                <table>
                    <tr>
                        <td>
                            @foreach (var item in ViewBag.Categories2)
                            {
                                <ul><a asp-controller="Home" asp-action="Category" asp-route-categoryId="@item.CategoryId">@item.Name</a></ul>
                            }
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>