@model List<Chef>
    
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Chefs | <a asp-action="Dishes">Dishes</a></h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-success mb-3"asp-action="NewChef">Add a Chef</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h3 class="text-center">Check out our roster of Chefs!</h3>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th># of Dishes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Chef chef in Model)
                    {
                        int age = DateTime.Now.Year - chef.DOB.Year;
                        <tr>
                            <td>@chef.FirstName @chef.LastName</td>
                            <td>@age</td>
                            <td>@chef.CreatedDishes.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>