@model Dish

<div class="container">
    <h1 class="text-center">Add a Dish!</h1>
    <a asp-action="Index">Home</a>

    <form asp-controller="Home" asp-action="CreateDish" method="POST">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="DishName"></label>
                    <span class="text-danger font-weight-bold" asp-validation-for="DishName"></span>
                    <input asp-for="DishName">
                </div>

                <div class="form-group">
                    <label asp-for="Calories"></label>
                    <span class="text-danger font-weight-bold" asp-validation-for="Calories"></span>
                    <input asp-for="Calories">
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
                    <textarea asp-for="Description"></textarea>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="ChefId"></label>
                    <span class="text-danger font-weight-bold" asp-validation-for="ChefId"></span>
                    <select asp-for="ChefId" class="custom-select">
                        @foreach (Chef chef in ViewBag.Chefs)
                        {
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <button class="btn btn-success">Add Dish</button>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <span class="text-danger font-weight-bold" asp-validation-for="Tastiness"></span>
                    <select asp-for="Tastiness" class="custom-select">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>
        </div>
    </form>
</div>