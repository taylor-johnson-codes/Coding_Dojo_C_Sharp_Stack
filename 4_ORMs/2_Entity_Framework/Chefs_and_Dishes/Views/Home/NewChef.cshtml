@model Chef

<div class="container">
    <h3 class="text-center">Add a Chef!</h3>
    <a asp-action="Index">Home</a>

    <form asp-controller="Home" asp-action="CreateChef" method="POST">
        <div class="row">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
                <input asp-for="FirstName">
            </div>

            <div class="form-group">
                <label asp-for="DOB"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="DOB"></span>
                <input asp-for="DOB">
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="LastName"></label>
                <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
                <input asp-for="LastName">
            </div>

            <div class="form-group">
                <button class="btn btn-success">Add Chef</button>
            </div>
        </div>
    </form>
</div>